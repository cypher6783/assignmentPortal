<%- include('../partials/header') %>

<div class="card auth-container">
    <h2 style="margin-bottom: 1.5rem;">Change Password</h2>
    
    <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>
    <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
        <p><a href="/student/dashboard">Return to Dashboard</a></p>
    <% } else { %>

    <form action="/auth/change-password" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
            <label for="currentPassword">Current Password</label>
            <input type="password" id="currentPassword" name="currentPassword" required>
        </div>
        <div class="form-group">
            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword" required minlength="4">
            <small class="text-muted">Minimum 4 characters</small>
        </div>
        <div class="flex-gap-2">
            <button type="submit" class="btn">Update Password</button>
            <a href="/student/dashboard" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    <% } %>
</div>

<%- include('../partials/footer') %>
